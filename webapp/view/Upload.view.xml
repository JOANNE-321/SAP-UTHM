<mvc:View controllerName="project1.controller.Upload"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m">
    <Page title="Upload Documents" class="sapUiContentPadding">
        <content>
            <VBox class="sapUiResponsiveMargin">
                <VBox class="customCard sapUiMediumMarginBottom">
                    <Title text="Document Details" level="H2" class="sapUiSmallMarginBottom" />
                    <Text text="Upload and link documents to your advising sessions for better tracking." class="sapUiSmallMarginBottom" />
                    
                    <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
                        <f:content>
                            <Label text="Document Type" required="true" />
                            <Select id="docTypeSelect" items="{mock>/DocTypes}">
                                <core:Item key="{mock>Key}" text="{mock>Text}" />
                            </Select>

                            <Label text="Link to Advising Session" />
                            <Select id="sessionSelect" items="{path: 'mock>/AdvisingSessions'}">
                                <core:Item key="{mock>ID}" text="{mock>Title} ({mock>Date})" />
                                <core:ListItem key="None" text="No Session (General)" />
                            </Select>

                            <Label text="Description / Notes" />
                            <TextArea id="docDescription" rows="4" placeholder="Briefly describe the document contents..." />

                            <Label text="Select File" required="true" />
                            <u:FileUploader
                                id="fileUploader"
                                name="myFileUpload"
                                tooltip="Upload your file here"
                                style="Emphasized"
                                placeholder="Choose a file..."
                                fileType="pdf,doc,docx,jpg,png"
                                maximumFileSize="10">
                            </u:FileUploader>
                            <Text text="Supported: PDF, DOC, DOCX, JPG, PNG (Max 10MB)" class="sapUiTinyMarginTop" />
                        </f:content>
                    </f:SimpleForm>

                    <HBox justifyContent="Start" class="sapUiMediumMarginTop">
                        <Button text="Upload Document" type="Emphasized" press="onUploadPress" icon="sap-icon://upload-to-cloud" />
                    </HBox>
                </VBox>

                <Panel headerText="Quick Tips" class="customCard" expandable="true" expanded="true">
                    <layout:VerticalLayout>
                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://message-information" color="#1e40af" class="sapUiSmallMarginEnd" />
                            <Text text="Ensure documents are clear and high-resolution." />
                        </HBox>
                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://link" color="#1e40af" class="sapUiSmallMarginEnd" />
                            <Text text="Linking to a session helps your advisor review contextual documents." />
                        </HBox>
                        <HBox alignItems="Center">
                            <core:Icon src="sap-icon://attachment" color="#1e40af" class="sapUiSmallMarginEnd" />
                            <Text text="You can upload multiple documents by repeating the process." />
                        </HBox>
                    </layout:VerticalLayout>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>
