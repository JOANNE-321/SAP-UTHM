<mvc:View controllerName="project1.controller.Advising"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:suite="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page title="Advising History" class="sapUiContentPadding">
        <content>
            <VBox class="sapUiResponsiveMargin">
                <suite:Timeline id="advisingTimeline" 
                    enableScroll="false"
                    sortOldestFirst="false"
                    content="{mock>/AdvisingSessions}"
                    class="customCard">
                    <suite:TimelineItem
                        dateTime="{mock>Date}"
                        title="{mock>Title}"
                        userName="{mock>Advisor}"
                        icon="sap-icon://person-placeholder"
                        filterValue="{mock>Advisor}">
                        <suite:embeddedControl>
                            <VBox class="sapUiSmallMargin">
                                <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                                    <core:Icon src="sap-icon://clock" class="sapUiTinyMarginEnd" />
                                    <Text text="{mock>Time}" />
                                </HBox>

                                <VBox class="sapUiSmallMarginBottom">
                                    <Label text="Discussion Summary" design="Bold" />
                                    <Text text="{mock>Summary}" />
                                </VBox>

                                <VBox class="sapUiSmallMarginBottom">
                                    <Label text="Outcome" design="Bold" />
                                    <ObjectStatus text="{mock>Outcome}" state="Success" class="statusBadgeSuccess" />
                                </VBox>

                                <VBox visible="{= ${mock>Documents}.length > 0 }">
                                    <Label text="Linked Documents" design="Bold" class="sapUiTinyMarginBottom" />
                                    <List items="{mock>Documents}" separators="None" class="sapUiNoContentPadding">
                                        <StandardListItem 
                                            title="{mock>Name}" 
                                            icon="sap-icon://attachment" 
                                            type="Navigation" 
                                            press="onDocumentPress"
                                            info="View File" />
                                    </List>
                                </VBox>
                            </VBox>
                        </suite:embeddedControl>
                    </suite:TimelineItem>
                </suite:Timeline>
            </VBox>
        </content>
    </Page>
</mvc:View>
