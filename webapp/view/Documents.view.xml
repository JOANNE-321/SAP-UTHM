<mvc:View controllerName="project1.controller.Documents"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page title="My Documents" class="sapUiContentPadding">
        <content>
            <VBox class="sapUiResponsiveMargin">
                <Table id="docsTable" items="{mock>/Documents}" growing="true" growingThreshold="10" class="customCard">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Document Library" level="H2" />
                            <ToolbarSpacer />
                            <SearchField width="300px" placeholder="Search by name or type..." search="onSearch" />
                            <Button icon="sap-icon://sort" tooltip="Sort" press="onSort" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="30%">
                            <Text text="Document Name" class="textBold" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet">
                            <Text text="Type" class="textBold" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Desktop">
                            <Text text="Size" class="textBold" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Tablet">
                            <Text text="Upload Date" class="textBold" />
                        </Column>
                        <Column demandPopin="true" minScreenWidth="Desktop">
                            <Text text="Linked Session" class="textBold" />
                        </Column>
                        <Column hAlign="End">
                            <Text text="Actions" class="textBold" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Inactive">
                            <cells>
                                <HBox alignItems="Center">
                                    <core:Icon src="{= ${mock>Type} === 'Study Plan' ? 'sap-icon://education' : 'sap-icon://document'}" class="sapUiSmallMarginEnd" color="#1e40af" />
                                    <ObjectIdentifier title="{mock>Name}" />
                                </HBox>
                                <Text text="{mock>Type}" class="{= ${mock>Type} === 'Medical Report' ? 'statusBadgeError' : (${mock>Type} === 'Appeal Letter' ? 'statusBadgeWarning' : 'statusBadgeSuccess') }" />
                                <Text text="{mock>Size}" />
                                <Text text="{mock>Date}" />
                                <Text text="{mock>Session}" />
                                <HBox justifyContent="End">
                                    <Button icon="sap-icon://attachment-html" type="Transparent" tooltip="View" press="onViewPress" />
                                    <Button icon="sap-icon://download" type="Transparent" tooltip="Download" press="onDownloadPress" />
                                    <Button icon="sap-icon://delete" type="Transparent" color="Negative" tooltip="Delete" press="onDeletePress" />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
